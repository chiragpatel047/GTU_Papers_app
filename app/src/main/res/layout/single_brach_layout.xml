<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/card_back"
    android:padding="20dp">

    <ImageView
        android:id="@+id/branch_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book"
        app:tint="@color/icon_tint" />

    <TextView
        android:id="@+id/branch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Aeronautical Eng."
        android:textColor="@color/icon_tint"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/branch_logo"
        app:layout_constraintStart_toEndOf="@+id/branch_logo"
        app:layout_constraintTop_toTopOf="@+id/branch_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>